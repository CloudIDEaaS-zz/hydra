	  <None Update="Hydra.Interfaces.Release.nuspec">
	    <IsTransformFile>true</IsTransformFile>
	    <DependentUpon>Hydra.Interfaces.nuspec</DependentUpon>
	  </None>
	</ItemGroup>

	<UsingTask AssemblyFile="$(MSBuildProjectDirectory)\..\Binaries\SolutionLibraries\ApplicationGeneratorBuildTasks.dll" TaskName="UpdateHydraNuget" />
	<Target Name="AfterBuild">
		<Message Importance="high" Text="Updating Hydra.Interfaces nuget package" />
		<UpdateHydraNuget Configuration="$(Configuration)" TargetFramework="$(TargetFrameworkVersion)" TargetVersion="$(AssemblyVersion)" />
	</Target>

</Project>

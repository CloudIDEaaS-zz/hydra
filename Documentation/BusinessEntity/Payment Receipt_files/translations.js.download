function initTranslations() {

	angular
			.module("AZ_PORTAL")
			.config(
					[
							'$translateProvider',
							function($translateProvider) {
								var language = (window.navigator.userLanguage || window.navigator.language)
										.toLowerCase();
								console.log(language);
								$translateProvider
										.registerAvailableLanguageKeys([ 'sp',
												'en' ], {
											'en' : 'en',
											'sp' : 'sp'
										});

								$translateProvider.useStaticFilesLoader({
									prefix : 'js/translate/lang_',
									suffix : '.json'
								});
								// Tell the module what language to use by
								// default
								$translateProvider.preferredLanguage('en');
								$translateProvider
										.useSanitizeValueStrategy('escape'); //
								// $translateProvider.use('de'); // Tell the
								// module to store the language in the cookies
								$translateProvider.useCookieStorage();
								$translateProvider.fallbackLanguage("en");
							} ]);

	angular.module("AZ_PORTAL").controller("TranslateCtrl",
			function($translate, $location) {
				var vm = this;
				vm.language = "en";

				vm.changeLanguage = function() {
					console.log("change lang to " + vm.language);
					console.log("change lang query string to " + vm.language);
					$location.search('lang', vm.language);
					$translate.use(vm.language);
				};
			});

}
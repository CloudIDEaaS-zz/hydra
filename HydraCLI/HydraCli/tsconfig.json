{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "out",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "target": "esNext"
    },
    "include": [
        "src/**/*.ts",
        "src/welcome.js.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/modules/utils/extensions.ts"
    ]
}